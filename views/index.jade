.navbar
	.navbar-inner
		.container
			a.btn.btn-navbar("data-target"=".nav-collapse", "data-toggle"="collapse")
				span.icon-bar
				span.icon-bar
				span.icon-bar
			a#connected.brand(:href = "#") Activity Streams
			.nav-collapse
				ul.nav
					- if(session.auth)
						li.logout
							a(href="/logout")
								span Logout
			.span5
				- if(!session.auth)
					ul.nav
						li.dropdown
							a(href="#", "data-toggle"="dropdown")
								span Login
								b.caret
							ul.dropdown-menu
								li.facebook
									a(href="/auth/facebook")
										img(src="//facebook.com/favicon.ico", alt="Facebook")
										span Facebook
								li.twitter
									a(href="/auth/twitter)
										img(src="//twitter.com/favicon.ico", alt="Twitter")
										span Twitter
								li.github
									a(href="/auth/github")
										img(src="//github.com/favicon.ico", alt="GitHub")
										span Github

.container
	- var activities = [];
	.row
		.span10.offset1
			-if (locals.streams) {
				ul.nav.nav-tabs
					each stream in locals.streams
						-if (stream.items && stream.items.length>0)
							li.active
								- activities = stream.items
								a(href="/streams/#{stream.name}")=stream.name
						-else
							li
								a(href="/streams/#{stream.name}")=stream.name
			-}
	.row
		.span10.offset1
			form.well
				.row
					.span8
						label Content
						textarea.span7#msg
				.row
					.span8
						button#send-message Publish
	.row
		.span10.offset1#stream
			ul.unstyled
				-if (activities && activities.length) {
					include activity
				-}

